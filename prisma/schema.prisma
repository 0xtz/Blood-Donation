generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
  // url      = ""
}

model Users {
  id            String     @id @default(cuid())
  cin           String     @unique
  email         String     @unique
  password      String?
  dob           DateTime
  last_name     String
  first_name    String
  city          String
  last_donation DateTime?
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  bloodType     String
  phoneNumber   String?
  address       String
  Donation      Donation[]
}

model Hospital {
  id             String         @id @default(cuid())
  name           String
  location       String
  email          String?        @unique
  created_at     DateTime       @default(now())
  updated_at     DateTime       @updatedAt
  blood_requests BloodRequest[]
  Donation       Donation[]
}

model Donation {
  id          String     @id @default(cuid())
  user_id     String
  hospital_id String
  bloodTypeId String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  userId      String?
  hospitalId  String?
  BloodType   BloodType? @relation(fields: [bloodTypeId], references: [id])
  Hospital    Hospital?  @relation(fields: [hospitalId], references: [id])
  User        Users?     @relation(fields: [userId], references: [id])

  @@index([bloodTypeId], map: "Donation_bloodTypeId_fkey")
  @@index([hospitalId], map: "Donation_hospitalId_fkey")
  @@index([userId], map: "Donation_userId_fkey")
}

model BloodRequest {
  id          String   @id @default(cuid())
  hospital_id String
  blood_type  String
  status      String   @default("Open")
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  hospital    Hospital @relation(fields: [hospital_id], references: [id])

  @@index([hospital_id], map: "BloodRequest_hospital_id_fkey")
}

model BloodType {
  id             String     @id @default(cuid())
  type           String
  canDonateTo    String
  canReceiveFrom String
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  Donation       Donation[]
}
